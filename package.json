{
  "name": "wb-calc",
  "version": "1.1.0",
  "description": "Unit Calculator Application",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*",
    "app/web"
  ],
  "scripts": {
    "clean": "rimraf '**/dist' '**/build' '**/node_modules/.cache' '**/tsconfig.tsbuildinfo'",
    "build:types": "tsc -b tsconfig.json --emitDeclarationOnly",
    "build:packages": "yarn workspaces foreach -pvi --include=@wb-calc/* run build",
    "build:services": "yarn workspace @wb-calc/api-gateway build",
    "build:app": "cd app/web && npm run build",
    "build": "yarn clean && yarn build:types && yarn build:packages && yarn build:services && yarn build:app",
    "docs": "typedoc",
    "docs:build": "yarn docs && yarn build",
    "type-check": "tsc --noEmit",
    "dev": "concurrently \"yarn dev:web\" \"yarn dev:api\"",
    "dev:web": "cd app/web && npm run dev",
    "dev:api": "cd services/api-gateway && npm run dev",
    "debug:web": "cd app/web && npm run dev -- --debug",
    "debug:api": "cd services/api-gateway && npm run dev:debug",
    "start": "node services/api-gateway/dist/index.js",
    "test": "yarn workspaces foreach -pvi run test",
    "test:e2e": "cd tests/e2e && npx playwright test",
    "lint": "eslint --ext .ts,.tsx .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install"
  },
  "keywords": [
    "unit",
    "calculator",
    "conversion"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^8.0.0",
    "prettier": "^2.0.0",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@reduxjs/toolkit": "^2.9.0",
    "@types/react-redux": "^7.1.34",
    "express-rate-limit": "^8.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.3"
  },
  "packageManager": "yarn@4.10.3"
}
