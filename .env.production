# \.env.production
# Переменные окружения для продакшена

# Серверная часть
SERVER_PORT=3001
NODE_ENV=production
CLIENT_URL=https://your-domain.com

# База данных
DATABASE_URL=./data/units.db

# JWT токены (замените на реальные секретные ключи)
JWT_SECRET=your-production-jwt-secret-key-here-make-it-long-and-random
JWT_REFRESH_SECRET=your-production-refresh-secret-key-here-make-it-long-and-random
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Внешние API
EXTERNAL_API_TIMEOUT=5000
EXCHANGE_API_URL=https://api.exchangerate-api.com/v4
WEATHER_API_KEY=your-production-weather-api-key

# Логирование
LOG_LEVEL=warn
LOG_FILE=./logs/server.log

# Клиентская часть
VITE_API_URL=https://your-api-domain.com/api
VITE_APP_TITLE="Unit Calculator"
VITE_APP_DESCRIPTION="Приложение для расчёта единиц измерения"

# Функции продакшена
ENABLE_API_MOCK=false
ENABLE_DEBUG_LOGS=false
