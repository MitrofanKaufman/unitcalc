# \.env.development
# Переменные окружения для разработки

# Серверная часть
SERVER_PORT=3001
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# База данных
DATABASE_URL=./data/units.db

# JWT токены
JWT_SECRET=dev-jwt-secret-key-12345
JWT_REFRESH_SECRET=dev-refresh-secret-key-12345
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Внешние API
EXTERNAL_API_TIMEOUT=5000
EXCHANGE_API_URL=https://api.exchangerate-api.com/v4
WEATHER_API_KEY=demo-weather-key

# Логирование
LOG_LEVEL=debug
LOG_FILE=./logs/server.log

# Клиентская часть
VITE_API_URL=http://localhost:3001/api
VITE_APP_TITLE="Unit Calculator (Dev)"
VITE_APP_DESCRIPTION="Приложение для расчёта единиц измерения - Development"

# Функции разработки
ENABLE_API_MOCK=true
ENABLE_DEBUG_LOGS=true
