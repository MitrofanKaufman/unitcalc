// \.env.example
// Пример файла переменных окружения для проекта Unit Calculator

# Серверная часть
SERVER_PORT=3001
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# База данных
DATABASE_URL=./data/units.db

# JWT токены
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Внешние API
EXTERNAL_API_TIMEOUT=5000
EXCHANGE_API_URL=https://api.exchangerate-api.com/v4
WEATHER_API_KEY=your-weather-api-key

# Логирование
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# Клиентская часть
VITE_API_URL=http://localhost:3001/api
VITE_APP_TITLE="Unit Calculator"
VITE_APP_DESCRIPTION="Приложение для расчёта единиц измерения"

# Функции разработки
ENABLE_API_MOCK=false
ENABLE_DEBUG_LOGS=true
