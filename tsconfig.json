{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": false,
    "composite": false,
    
    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/*"],
      "@packages/*": ["packages/*"],
      "@services/*": ["services/*"],
      "@tests/*": ["tests/*"],
      "@/*": ["app/web/src/*"]
    }
  },
  /* Include all TypeScript files in the project */
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.d.ts",
    "services/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "**/dist/*"
  ]
}
